{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "acme",
  "homepage": "https://acme.com",
  "items": [
    {
      "name": "hello-world",
      "type": "registry:component",
      "title": "Hello World",
      "description": "A simple hello world component",
      "registryDependencies": ["button"],
      "files": [
        {
          "path": "registry/metis/blocks/hello-world/hello-world.tsx",
          "type": "registry:component"
        }
      ]
    },
    {
      "name": "example-form",
      "type": "registry:component",
      "title": "Example Form",
      "description": "A contact form with Zod validation.",
      "dependencies": ["zod"],
      "registryDependencies": ["button", "input", "label", "textarea", "card"],
      "files": [
        {
          "path": "registry/metis/blocks/example-form/example-form.tsx",
          "type": "registry:component"
        }
      ]
    },
    {
      "name": "complex-component",
      "type": "registry:component",
      "title": "Complex Component",
      "description": "A complex component showing hooks, libs and components.",
      "registryDependencies": ["card"],
      "files": [
        {
          "path": "registry/metis/blocks/complex-component/page.tsx",
          "type": "registry:page",
          "target": "app/pokemon/page.tsx"
        },
        {
          "path": "registry/metis/blocks/complex-component/components/pokemon-card.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/metis/blocks/complex-component/components/pokemon-image.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/metis/blocks/complex-component/lib/pokemon.ts",
          "type": "registry:lib"
        },
        {
          "path": "registry/metis/blocks/complex-component/hooks/use-pokemon.ts",
          "type": "registry:hook"
        }
      ]
    },
    {
      "name": "example-with-css",
      "type": "registry:component",
      "title": "Example with CSS",
      "description": "A login form with a CSS file.",
      "files": [
        {
          "path": "registry/metis/blocks/example-with-css/example-card.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/metis/blocks/example-with-css/example-card.css",
          "type": "registry:component"
        }
      ]
    },
    {
      "name": "calendar-block",
      "type": "registry:component",
      "title": "Calendar Block",
      "description": "A simple wrapper around the calendar widget.",
      "registryDependencies": ["calendar"],
      "files": [
        {
          "path": "registry/metis/blocks/calendar/calendarBlock.tsx",
          "type": "registry:component"
        }
      ]
    },
    {
      "name": "main-layout",
      "type": "registry:component",
      "title": "Main Layout",
      "description": "A dashboard shell with a collapsible sidebar and navigation menu.",
      "dependencies": ["lucide-react"],
      "registryDependencies": ["sidebar", "navigation-menu", "header"],
      "files": [
        {
          "path": "registry/metis/Layout/MainLayout.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/metis/blocks/sidebar/sidebar.tsx",
          "type": "registry:component"
        },
        {
          "path": "registry/metis/ui/header.tsx",
          "type": "registry:component"
        },
        {
          "path": "hooks/use-mobile.ts",
          "type": "registry:hook"
        }
      ]
    }
  ]
}
